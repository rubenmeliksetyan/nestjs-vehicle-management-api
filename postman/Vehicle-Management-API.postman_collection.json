{
  "info": {
    "name": "Vehicle Management API",
    "description": "Auth, public cars, me/nearest-cars, admin categories/tags/cars.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1" },
    { "key": "accessToken", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"fullName\": \"John Doe\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": "{{baseUrl}}/auth/signup"
          }
        },
        {
          "name": "Signin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@local.dev\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": "{{baseUrl}}/auth/signin"
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Cars (public)",
      "item": [
        {
          "name": "List cars",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/cars?page=1&limit=10&orderBy=createdAt&orderDirection=DESC",
              "host": ["{{baseUrl}}"],
              "path": ["cars"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "search", "value": "", "disabled": true },
                { "key": "categoryId", "value": "", "disabled": true },
                { "key": "tagIds", "value": "1,2", "description": "Comma-separated tag IDs" },
                { "key": "orderBy", "value": "createdAt", "description": "Sort by: id, make, model, year, color, price, mileage, createdAt, updatedAt" },
                { "key": "orderDirection", "value": "DESC", "description": "ASC or DESC" }
              ]
            }
          }
        },
        {
          "name": "Cars grouped by category",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/cars/grouped-by-category"
          }
        }
      ]
    },
    {
      "name": "Me",
      "item": [
        {
          "name": "Nearest cars",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/me/nearest-cars?latitude=52.52&longitude=13.405&radiusKm=10",
              "host": ["{{baseUrl}}"],
              "path": ["me", "nearest-cars"],
              "query": [
                { "key": "latitude", "value": "52.52" },
                { "key": "longitude", "value": "13.405" },
                { "key": "radiusKm", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Request pickup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"carId\": 1,\n  \"latitude\": 52.52,\n  \"longitude\": 13.405\n}"
            },
            "url": "{{baseUrl}}/me/request-pickup"
          }
        }
      ]
    },
    {
      "name": "Admin - Categories",
      "item": [
        {
          "name": "Create category",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Sedan\"\n}" },
            "url": "{{baseUrl}}/categories"
          }
        },
        {
          "name": "List categories",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/categories"
          }
        },
        {
          "name": "Get category",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/categories/1"
          }
        },
        {
          "name": "Update category",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Sedan Updated\"\n}" },
            "url": "{{baseUrl}}/categories/1"
          }
        },
        {
          "name": "Delete category",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/categories/1"
          }
        }
      ]
    },
    {
      "name": "Admin - Users",
      "item": [
        {
          "name": "List users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/admin/users"
          }
        },
        {
          "name": "Disable/Enable user",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": false\n}"
            },
            "url": "{{baseUrl}}/admin/users/1"
          }
        }
      ]
    },
    {
      "name": "Admin - Tags",
      "item": [
        {
          "name": "Create tag",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Eco\"\n}" },
            "url": "{{baseUrl}}/tags"
          }
        },
        {
          "name": "List tags",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/tags"
          }
        },
        {
          "name": "Get tag",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/tags/1"
          }
        },
        {
          "name": "Update tag",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Eco Updated\"\n}" },
            "url": "{{baseUrl}}/tags/1"
          }
        },
        {
          "name": "Delete tag",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/tags/1"
          }
        }
      ]
    },
    {
      "name": "Admin - Cars",
      "item": [
        {
          "name": "Create car",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Toyota\",\n  \"model\": \"Corolla\",\n  \"year\": 2022,\n  \"color\": \"Blue\",\n  \"price\": 25000,\n  \"mileage\": 0,\n  \"categoryId\": 1,\n  \"latitude\": 52.52,\n  \"longitude\": 13.405,\n  \"imageUrls\": [\"https://example.com/car.jpg\"],\n  \"tagIds\": [1]\n}"
            },
            "url": "{{baseUrl}}/admin/cars"
          }
        },
        {
          "name": "List admin cars",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/cars?orderBy=createdAt&orderDirection=DESC",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "cars"],
              "query": [
                { "key": "orderBy", "value": "createdAt", "description": "Field to sort by: id, make, model, year, color, price, mileage, createdAt, updatedAt" },
                { "key": "orderDirection", "value": "DESC", "description": "Sort direction: ASC or DESC" }
              ]
            }
          }
        },
        {
          "name": "Get car",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/admin/cars/1"
          }
        },
        {
          "name": "Update car",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"make\": \"Toyota\",\n  \"model\": \"Corolla Updated\",\n  \"latitude\": 52.53,\n  \"longitude\": 13.41,\n  \"imageUrls\": [\"https://example.com/car-updated.jpg\"]\n}"
            },
            "url": "{{baseUrl}}/admin/cars/1"
          }
        },
        {
          "name": "Delete car",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}/admin/cars/1"
          }
        }
      ]
    }
  ]
}
